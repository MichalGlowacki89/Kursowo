<div class="hero-unit">
<h1>Spis użytkowników</h1>

<table class ="table table-striped">
  <thead>
    <tr class="info">
      <th>Imie</th>
      <th>Nazwisko</th>
      <th>Login</th>
      <th>Password digest</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @uzytkowniks.each do |uzytkownik| %>
      <tr>
        <td><%= uzytkownik.imie %></td>
        <td><%= uzytkownik.nazwisko %></td>
        <td><%= uzytkownik.login %></td>
        <td><%= uzytkownik.password_digest %></td>
        <td><%= uzytkownik.email %></td>
        <td><%= link_to 'Show', uzytkownik , :class => 'btn btn-mini btn-default'%></td>
        <td><%= link_to 'Edit', edit_uzytkownik_path(uzytkownik), :class => 'btn btn-mini btn-primary'%></td>
        <td><%= link_to 'Destroy', uzytkownik, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Uzytkownik', new_uzytkownik_path, :class => 'btn btn-mini btn-primary' %>
<%= link_to("Powrót", {:controller => 'dostep'}, :class => 'btn btn-default')%>
</div>
